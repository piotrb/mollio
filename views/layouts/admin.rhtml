<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title><%= @page.title %></title>
<% @page.css.each do |css| -%>
<%= stylesheet_link_tag(css) %>
<% end -%>
<%= stylesheet_link_tag(@page.template_base + "mollio_fix.css") %>
<link rel="stylesheet" type="text/css" href="<%= @page.template_base %>css/main.css" media="screen" />
<link rel="stylesheet" type="text/css" href="<%= @page.template_base %>css/print.css" media="print" />
<%= javascript_include_tag(:defaults) %>
<!--[if lte IE 6]>
<link rel="stylesheet" type="text/css" href="<%= @page.template_base %>css/ie6_or_less.css" />
<![endif]-->
<script type="text/javascript" src="<%= @page.template_base %>js/common.js"></script>
<style type="text/css" media="screen">
#search {
	display: none;
}
</style>
</head>
<body id="type-a">
<div id="wrap">

	<div id="header">

		<div id="site-name"><%= @page.site_name %></div>
		<div id="search">
			<form action="">
			<label for="searchsite">Site Search:</label>
			<input id="searchsite" name="searchsite" type="text" />
			<input type="submit" value="Go" class="f-submit" />
			</form>
		</div>

		<%= build_menu(@page.menu) %>

	</div>

	
	<div id="content-wrap">
	
		<div id="content">

			<%= build_breadcrumb(@page.breadcrumb) %>

			<% if flash[:error] %><p class="error"><%= flash[:error] %></p><% end %>
			<% if flash[:notice] %><p class="highlight"><%= flash[:notice] %></p><% end %>

			<%= yield %>

			<div id="footer">
				<p><%= @page.copyright %></p>
			</div>
		
		</div>
		
		<div id="poweredby"><a href="http://mollio.org/"><img src="<%= @page.template_base %>wsimages/mollio.gif" alt="FarCry - Mollio" /></a></div>
		
	</div>

</div>

</body>
</html>
